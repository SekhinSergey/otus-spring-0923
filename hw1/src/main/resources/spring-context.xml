<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="resourceReader" class="ru.otus.spring.util.CsvResourceReader"/>
    <bean id="printer" class="ru.otus.spring.out.SystemPrinter"/>
    <bean id="surveyDao" class="ru.otus.spring.dao.SurveyDaoImpl">
        <constructor-arg index="0" ref="resourceReader"/>
        <constructor-arg index="1" value="russia-survey.csv"/>
    </bean>
    <bean id="surveyService" class="ru.otus.spring.service.SurveyServiceImpl">
        <constructor-arg index="0" ref="surveyDao"/>
        <constructor-arg index="1" ref="printer"/>
    </bean>
</beans>
